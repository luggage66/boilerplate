{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,       
        "jsx": "preserve",  
        "target": "ES2017",
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "silent": true
    }
}
